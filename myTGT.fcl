#include "fcl/minimalMessageService.fcl"
#include "fcl/standardServices.fcl"

process_name :  PSBeam

source : { module_type : RootInput }

services : {
   message: @local::default_message
   TFileService: { fileName: "nts.owner.PS.version.sequencer.root" }
}

physics: {

   analyzers: {
      genCountLogger: { module_type: GenEventCountReader }

      stoppedMuonDumper: {
          module_type: myStoppedParticleDumer
	 dumpSimParticleLeaves: true
         inputCollection: "tgtStopFilter" //"muonBeamFilter"
         writeProperTime : false
      }
   }

   an: [ genCountLogger, stoppedMuonDumper ]
   end_paths: [an]
}

